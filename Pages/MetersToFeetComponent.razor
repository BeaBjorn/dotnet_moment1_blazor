<div class="px-2 py-4 box-border mb-3">
    <h2 class="py-3">Convert meters to feet</h2>
    <div class="row d-flex align-items-center">
        <span class="col-auto fs-5">Meters: <input class="" type="number" @bind="meters" /></span>
        <!-- Button that runs the function ConvertMeters when clicked -->
        <button class="col-11 col-sm-3 ms-2 ms-sm-0 mt-3 mt-sm-0 btn convert-button" @onclick="ConvertMeters">Convert</button>
    </div>
     <!-- @meters and @feet is used to print the their values to the screen -->
    <p class="fs-4 mt-4 mb-2">@meters meters converted to feet = @feet feet</p>
</div>

@code {
    //Storing values for meters and feet in variables
    private double meters;
    private double feet;

    // Function that converts the number entered in meters to feet by multiplying this with 3.28084
    // Math.Round is used to round the result to one decimal
    private void ConvertMeters()
    {
        feet = Math.Round(meters * 3.28084, 1);
    }
}
